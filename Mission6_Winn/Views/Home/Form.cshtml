@model Movie
@{
    ViewData["Title"] = "Form";
}
<h1>@ViewData["Title"]</h1>

<form method="post">

    <input type="hidden" asp-for="MovieId"/>

    <label asp-for="CategoryId">Category</label>
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category x in ViewBag.Categories)
        {
            <option value="@x.CategoryId">@x.CategoryName</option>
        }
    </select>
    <br />
    <br />

    <label asp-for="Title">Title</label>
    <input asp-for="Title" Required="true" />
    <br />
    <br />

    <label asp-for="Year">Year</label>
    <input asp-for="Year" Required="true" type="number" min="1888" max="@DateTime.Now.Year" />
    <br />
    <br />

    <label asp-for="Director">Director</label>
    <input asp-for="Director" Required="true" />
    <br />
    <br />

    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <br />

    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
    </select>
    <br />
    <br />

    <label asp-for="LentTo">Lent to</label>
    <input asp-for="LentTo" />
    <br />
    <br />

    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" MaxLength="25" />
    <br />
    <br />

    <label asp-for="CopiedToPlex">Copied to Plex</label>
    <input type="radio" asp-for="CopiedToPlex" value="1" /> Yes
    <input type="radio" asp-for="CopiedToPlex" value="0" /> No

    <br />
    <br />

    <button type="submit">Submit Form</button>
    <br />
    <br />

</form>
